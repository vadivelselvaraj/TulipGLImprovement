<?xml version="1.0" encoding="UTF-8"?>
<!--
Custom project wizard configuration example file. Note that by convention, 
the project file goes last.
The "class" and "firstpage" attributes specify that it is a Qt 4 wizard and 
leave room for the Qt 4 target page.
-->
<wizard version="1" kind="project"
        class="qt4project" firstpage="10"
        id="Tulip Plugins.NodeLink view" category="Tulip.Plugins">
    <icon>logo.png</icon>
    <description>Creates a tulip View plugin based on the node link diagram view</description>
    <displayname>View Plug-in</displayname>;
    <displaycategory>Tulip Plugins</displaycategory>
    <files>
	<file source="view.h"   target="%ProjectName:c%.%CppHeaderSuffix%" openeditor="true"/>
	<file source="viewConfigWidget.cpp" target="%ProjectName:c%ConfigWidget.%CppSourceSuffix%" openeditor="true"/>
	<file source="viewConfigWidget.h" target="%ProjectName:c%ConfigWidget.%CppHeaderSuffix%" openeditor="true"/>
	<file source="view.cpp" target="%ProjectName:c%.%CppSourceSuffix%" openeditor="true"/>
	<file source="viewConfigWidget.ui" target="%ProjectName:c%ConfigWidget.ui" openeditor="true"/>
        <file source="view.cmake"     target="CMakeLists.txt" openproject="true" openeditor="false"/>
    </files>
    
    <!-- Create a 2nd wizard page with parameters -->
    <fieldpagetitle>Tulip Property Algorithm Plug-in Parameters</fieldpagetitle>
    <fields>
		<field name="PluginName">
				<fieldcontrol class="QLineEdit" defaulttext="My Algorithm" />
				<fielddescription>Algorithm name (used to call the plugin)</fielddescription>
		</field>
		<field name="Author">
				<fieldcontrol class="QLineEdit" defaulttext="Tulip Team" />
				<fielddescription>Author(last_name first_name)</fielddescription>
		</field>
		<field name="Date">
			<fieldcontrol class="QLineEdit" validator="^[0-9/]+$" defaulttext="07/01/2011" />
				<fielddescription>Date:</fielddescription>
		</field>
		<field name="Informations">
            <fieldcontrol class="QLineEdit" defaulttext="Simple Plugin" />
            <fielddescription>Plugin Description:</fielddescription>
        </field>
		<field name="Version">
            <fieldcontrol class="QLineEdit" validator="^[0-9\.]+$" defaulttext="0.1" />
            <fielddescription>Version :</fielddescription>
        </field>
        <field name="Group">
            <fieldcontrol class="QLineEdit" defaulttext="" />
            <fielddescription>Group :</fielddescription>
        </field>
    </fields>
</wizard>
