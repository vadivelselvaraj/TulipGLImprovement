#!/bin/bash
if [ $# -lt 4 ]; then
    echo "usage: $(basename $0) plugins_src_top_dir plugins_build_top_dir plugins_server_dir generate_doc(yes/no) arch"
  exit
fi

if [ -f /tmp/generation.log ]; then
    rm /tmp/generation.log
fi

touch generation.log
SRC_TOP_DIR=$1
BUILD_TOP_DIR=$2
SRV_DIR=$3
GENERATEDOC=$4
ARCH="i386"
if [ $# -gt 4 ]; then
  ARCH=$5
fi

if [ -d /tmp/plugins_doc ]; then
  rm -rf /tmp/plugins_doc/*
else
  mkdir /tmp/plugins_doc
fi

for LIB_DIR in $(find $BUILD_TOP_DIR -name 'lib*-@TulipVersion@.so' -exec dirname {} ";")
do
GEN_DOC=no
FILE_XML=none
if [ "$GENERATEDOC" == "yes" ]; then
  DIR=$(basename $LIB_DIR)
  SRC_DIR=$(find $1 -path "*/$DIR" -print)
  FILE_CPP=$(find $SRC_DIR -name "$DIR.cpp" -print | xargs grep -l PLUGIN)
  if [ $? -ne 0 ]; then
    FILE_CPP=$(find $SRC_DIR -name "*.cpp" -print | xargs grep -l PLUGIN)
  fi
  if [ $? -eq 0 ]; then
    FILE_H=${FILE_CPP%.cpp}.h
    if [ -f $FILE_H ]; then
      FILE=$FILE_H
      SUFFIX=h
    else
      FILE=$FILE_CPP
      SUFFIX=cpp
    fi
    rm -rf /tmp/plugins_doc/*
    sh $(dirname $0)/generate_plugin_doc.sh $FILE /tmp/plugins_doc
    GEN_DOC=yes
    FILE_XML=$(ls /tmp/plugins_doc/xml/*_8$SUFFIX.xml)
    if [ $? -ne 0 ]; then
      FILE_XML=$(ls /tmp/plugins_doc/xml/class*.xml | xargs grep -l '<para>')
      if [ $? -ne 0 ]; then
        GEN_DOC=no
        FILE_XML=none
      fi
    fi
  fi
fi
echo ""
echo ">>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>" >> /tmp/generation.log
echo ./pluginInstaller $LIB_DIR/lib*-@TulipVersion@.so $FILE_XML $SRV_DIR $GEN_DOC $ARCH >> /tmp/generation.log
./pluginInstaller $LIB_DIR/lib*-@TulipVersion@.so $FILE_XML $SRV_DIR $GEN_DOC $ARCH >> /tmp/generation.log
if [ $? -ne 0 ]; then
  echo pluginInstaller error !!!
  exit
fi
echo "<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<" >> /tmp/generation.log
done

